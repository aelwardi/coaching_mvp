{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-4">
    <h1 class="text-center mb-4">Liste des Coachs</h1>
    <div class="row g-4">
        {% for coach in coaches %}
            <a class="text-decoration-none" href="{{ path('app_coach', { 'slug': coach.slug }) }}">
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold text-dark mb-2">{{ coach.fullName }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <strong>Spécialité:</strong> {{ coach.speciality }}
                            </h6>
                            <p class="card-text small">{{ coach.description|raw }}</p>
                        </div>
                    </div>
                </div>
            </a>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center">Aucun coach trouvé.</div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}